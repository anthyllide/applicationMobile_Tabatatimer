<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/createTabata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:context="mi1.app.gonzalal.tabatatimer.CreateTabataActivity"
        android:weightSum="1">

        <EditText
            android:id="@+id/tabataName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:hint="Entrez ici le nom du tabata" />


        <LinearLayout
            android:id="@+id/prepareLinearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="15dp"
            android:background="#E99921"
            android:weightSum="1">

            <ImageView
                android:id="@+id/prepareIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gym"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/icon_prepare" />

            <Button
                android:id="@+id/prepareMinus"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/button_minus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue" />

            <TextView
                android:id="@+id/prepareTimer"
                android:textSize="30sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"/>

            <Button
                android:id="@+id/preparePlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_plus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/workLinearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#DC0A0A"
            android:layout_marginBottom="15dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/workIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/running"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/icon_work" />

            <Button
                android:id="@+id/workMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/button_minus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

            <TextView
                android:id="@+id/workTimer"
                android:textSize="30sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"/>

            <Button
                android:id="@+id/workPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_plus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/restLinearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#73DC0A"
            android:layout_marginBottom="15dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/restIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/rest"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/icon_rest" />

            <Button
                android:id="@+id/restMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/button_minus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

            <TextView
                android:id="@+id/restTimer"
                android:textSize="30sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"/>

            <Button
                android:id="@+id/restPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_plus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cycleLinearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#cecece"
            android:layout_marginBottom="15dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/cycleIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/repeat"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/icon_cycle" />

            <Button
                android:id="@+id/cycleMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/button_minus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

            <TextView
                android:id="@+id/cycleTimer"
                android:textSize="30sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"/>

            <Button
                android:id="@+id/cyclePlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_plus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabataLinearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#cecece"
            android:weightSum="1">

            <ImageView
                android:id="@+id/tabataIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/time"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/icon_tabata" />

            <Button
                android:id="@+id/tabataMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/button_minus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

            <TextView
                android:id="@+id/tabataTimer"
                android:textSize="30sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6" />

            <Button
                android:id="@+id/tabataPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_plus"
                android:layout_gravity="center_vertical"
                android:onClick="onChangeValue"/>

        </LinearLayout>

        <Button
            android:id="@+id/playButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:text = "ADD"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:background="@color/orange"
            android:onClick="addTabata"/>

    </LinearLayout>
</ScrollView>
